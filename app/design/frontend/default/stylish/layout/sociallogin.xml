      </action>                    <action method="setImgHeight">                        <width>50</width>                    </action>                </block>            </block>        </reference>    </default>    <customer_logged_out>    <!-- Account Menu -->	    <reference name="head">             <action method="addJs">                <script>sociallogin/sociallogin.js</script>            </action>        </reference>  	</customer_logged_out>    </layout> 